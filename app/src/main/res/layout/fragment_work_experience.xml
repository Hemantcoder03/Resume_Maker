<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.WorkExperienceFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Experience Details"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Company"
                                    android:textSize="@dimen/text_size"
                                    android:layout_margin="2dp"/>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/companyName"
                                    android:layout_width="@dimen/edittext_size"
                                    android:layout_height="35dp"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/resume_edittext_border"
                                    android:hint="Google"
                                    android:padding="2dp"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:layout_marginLeft="10dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="Designature"
                                    android:textSize="@dimen/text_size" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/companyDesignation"
                                    android:layout_width="@dimen/edittext_size"
                                    android:layout_height="35dp"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/resume_edittext_border"
                                    android:hint="CEO"
                                    android:textSize="@dimen/text_size"
                                    android:padding="2dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Start year"
                                    android:textSize="@dimen/text_size"
                                    android:layout_margin="2dp"/>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="@dimen/edittext_size"
                                    android:layout_height="35dp"
                                    android:id="@+id/workStartYear"
                                    android:layout_margin="2dp"
                                    android:hint="2000"
                                    android:textSize="@dimen/text_size"
                                    android:padding="2dp"
                                    android:background="@drawable/resume_edittext_border"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:layout_marginLeft="10dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="End year"
                                    android:textSize="@dimen/text_size" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/workEndYear"
                                    android:layout_width="@dimen/edittext_size"
                                    android:layout_height="35dp"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/resume_edittext_border"
                                    android:hint="2005"
                                    android:textSize="@dimen/text_size"
                                    android:padding="2dp"/>

                                <CheckBox
                                    android:id="@+id/currentWork"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="start|center_horizontal|center_vertical"
                                    android:text="currently enrolled"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Description"
                                    android:textSize="@dimen/text_size"
                                    android:layout_margin="2dp"/>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/workExperienceDesc"
                                    android:layout_width="@dimen/long_edittext_size"
                                    android:layout_height="150dp"
                                    android:layout_margin="2dp"
                                    android:gravity="start"
                                    android:inputType="textMultiLine"
                                    android:background="@drawable/resume_edittext_border"
                                    android:hint="desc"
                                    android:textSize="@dimen/text_size"
                                    android:padding="2dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</FrameLayout>